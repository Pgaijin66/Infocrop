<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/data"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/data"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:drawablePadding="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_alignRight="@+id/news"
        android:layout_alignEnd="@+id/news" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/graph"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/graph"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:drawablePadding="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_toRightOf="@+id/news"
        android:layout_toEndOf="@+id/news" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feasibility"
        android:background="@drawable/feasibilityanalysis"
        android:layout_below="@+id/data"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/news"
        android:layout_below="@+id/feasibility"
        android:layout_alignLeft="@+id/feasibility"
        android:layout_alignStart="@+id/feasibility"
        android:background="@drawable/news"
        android:layout_marginRight="15dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about"
        android:layout_alignTop="@+id/news"
        android:layout_alignRight="@+id/graph"
        android:layout_alignEnd="@+id/graph"
        android:background="@drawable/about"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/news"
        android:layout_toEndOf="@+id/news"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forum"
        android:layout_alignBottom="@+id/news"
        android:layout_alignRight="@+id/about"
        android:layout_alignEnd="@+id/about"
        android:background="@drawable/forum"
        android:layout_below="@+id/about"
        android:layout_alignParentTop="false"
        android:layout_alignLeft="@+id/about"
        android:layout_alignStart="@+id/about" />
</RelativeLayout>
